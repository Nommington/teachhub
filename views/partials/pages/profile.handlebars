<script>
            function onSignIn(googleUser) {
                console.log('Logged in as: ' + googleUser.getBasicProfile().getName());
                console.log("ID: " + googleUser.getBasicProfile().getId());
                console.log("Name: " + googleUser.getBasicProfile().getName());
                console.log("Image URL: " + googleUser.getBasicProfile().getImageUrl());
                localStorage.setItem("avatar", googleUser.getBasicProfile().getImageUrl());
                localStorage.setItem("name", googleUser.getBasicProfile().getName());
                
                localStorage.setItem("email", googleUser.getBasicProfile().getEmail())

                let teacher = {
                    name : googleUser.getBasicProfile().getName(),
                    email : googleUser.getBasicProfile().getEmail()
                }

                $.ajax({
                    url: "/api/teacher",
                    type : "POST",
                    dataType : "json",
                    data : JSON.stringify(teacher),
                    contentType : "application/json"
                }).then(function(response) {
                    localStorage.setItem("id", response.id);
                })

                console.log("Email: " + googleUser.getBasicProfile().getEmail());

                var signOutBtn = $("<span>");
                signOutBtn.addClass("octicon octicon-sign-out");

                var singOutLink = $("<a>");
                singOutLink.attr("href", "#");
                singOutLink.append(signOutBtn);
                singOutLink.attr("role", "button");
                singOutLink.on("click", function() {
                    signOutFn();
                });

                $("#signInBtn").hide();
                var userName = $("<div>");
                userName.text(googleUser.getBasicProfile().getName() + "  ");
                $("#rightSideNav").append(userName);
                $("#rightSideNav").append(singOutLink);

                $("#uploadButton").attr("disabled", false);
                $("#avatar").attr("src", localStorage.getItem("avatar"));

            }
            function onFailure(error) { 
                console.log(error);
            }
            function renderButton() {
                gapi.signin2.render('g-signin2', {
                'scope': 'profile email',
                'width': 240,
                'height': 50,
                'longtitle': true,
                'theme': 'dark',
                'onsuccess': onSignIn,
                'onfailure': onFailure
                });
            }

            function signOutFn() {
  var auth2 = gapi.auth2.getAuthInstance();
  if (auth2) {
    auth2.signOut().then(function() {
      localStorage.removeItem("avatar");
      localStorage.removeItem("name");
      localStorage.removeItem("id");
      localStorage.removeItem("email");
      console.log("User signed out.");
      location.reload();
    });
  }
}
